<% @body_id = 'product-details' %>

<% cache cache_key_for_product do %>
  <div id="product-show-content" data-hook="product_show" class="row" itemscope itemtype="https://schema.org/Product">
    <div class="col-md-6 col-sm-5" data-hook="product_left_part">
      <div data-hook="product_left_part_wrap">
        <div id="product-images" data-hook="product_images">
          <div id="" class="col-md-2" data-hook>
            <!-- <div class="col-md-1"> -->
              <div id="thumbnails" data-hook>
                <%= render partial: 'thumbnails' %>
              </div>
            <!-- </div> -->
          </div>
          <div id="main-image" class="col-md-10 panel panel-default" data-hook>
            <div class="panel-body text-center">
              <%= product_image(@product, itemprop: "image") %>
            </div>
          </div>
        </div>

        <!-- <div data-hook="product_properties"> -->
          <%# render partial: 'properties' %>
        <!-- </div> -->

        <!-- <div data-hook="promotions"> -->
          <%# render partial: 'promotions' %>
        <!-- </div> -->
      </div>
    </div>

    <div class="col-md-6 col-sm-7" data-hook="product_right_part">
      <div data-hook="product_right_part_wrap">
        <div id="product-description" data-hook="product_description">
          <h1 class="product-title" itemprop="name"><%= @product.name %></h1>

          <div class="well product-text" itemprop="description" data-hook="description">
            <%= product_description(@product) %>
          </div>

          <div class="row">
            <div id="price-area" data-hook="price-area">
              <%# render partial: 'cart_form' %>
              <div class="col-md-6 col-sm-6">
                <%= display_price(@product) %> <br>
                <% p = (@product.price.to_f * 12.0)/100.0 %>
                <% f = @product.price.to_f - p %>
                <div class="row" id="price-iva">
                  $<%= f %> + IVA12%
                </div>
              </div>
              <div class="col-md-6 col-sm-6" id="button-consultar-container">
                <button type="button"class="btn btn-primary">Consultar</button>
              </div>
            </div>
          </div>
        </div>

        <div id="taxon-crumbs" class=" five " data-hook="product_taxons">
          <%= render partial: 'taxons' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render partial: 'spree/products/concepts'%>
<%= render partial: 'spree/products/features'%>
<div id="other-models">
  <div id="other-products-title-container">
    <h2 class="other-products-title">
      Otros Modelos
    </h2>
  </div>
  <%= render partial: 'spree/shared/featured'%>
</div>
<%= render partial: 'spree/products/bloque_marca'%>
